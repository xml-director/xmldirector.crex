<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:pp="http://namespaces.zopyx.com/pp"
    xmlns:plone="http://namespaces.plone.org/plone"
    >

    <!-- demo --> 
    <browser:page
        name="xmldirector-crex-form"
        for="Products.CMFPlone.interfaces.IPloneSiteRoot"
        template="demo_form.pt"
        permission="cmf.ManagePortal"
    />

    <browser:page
        name="xmldirector-crex-convert"
        for="Products.CMFPlone.interfaces.IPloneSiteRoot"
        class=".converter.Converter"
        attribute="convert"
        permission="cmf.ManagePortal"
    />

    <browser:page
        name="xmldirector-crex-settings"
        for="Products.CMFPlone.interfaces.IPloneSiteRoot"
        class=".controlpanel.CRexSettingsControlPanel"
        permission="cmf.ManagePortal"
    />

    <!-- Extension point for custom routes -->
    <utility
        name="xmldirector.crex.routes"
        provides="plone.jsonapi.core.interfaces.IRouteProvider"
        factory=".api.APIRoutes" 
    />

    <include package="plone.rest" file="configure.zcml" />
    <plone:service
      method="PATCH"
        for="xmldirector.plonecore.connector.IConnector"
        factory=".service.Patch"
    />
    <plone:service
      method="GET"
        for="xmldirector.plonecore.connector.IConnector"
        factory=".service.Patch"
    />
    <plone:service
      method="POST"
        for="xmldirector.plonecore.connector.IConnector"
        factory=".service.Patch"
    />
    <plone:service
      method="PUT"
        for="xmldirector.plonecore.connector.IConnector"
        factory=".service.Patch"
    />

</configure>
